template(name='header')
  header.header
    a.header__logo(href='{{pathFor route="dashboard"}}')
      img(src='/logo-alpha.png')
      span CodeRoom

    .header__content
      +roomControls

      if isMain
        ul.header__menu.header__links.pull-left
          li
            a(href='{{pathFor route="dashboard"}}')
              | My Recordings
          li
            a(href='{{pathFor route="recordings"}}')
              | Channel Recordings

        ul.header__menu.pull-right
          li.dropdown
            +notifications
          li.dropdown
            a(data-toggle='dropdown' aria-expanded='false')
              img.img__profile(src='#{user.picture}')
            ul.dropdown-menu
              li
                a.btn-js-logout(href='#')
                  span.mdi.mdi-logout
                  | Logout
