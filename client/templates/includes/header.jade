template(name='header')
  header.header
    a.header__logo(href='{{pathFor route="dashboardPage"}}')
      img(alt='CodeRoom' src='/logo-alpha.png')
      span CodeRoom

    .header__content
      +roomControls

      if isMain
        ul.header__menu.header__links.pull-left
          li
            a(href='{{pathFor route="dashboardPage"}}')
              | My Playlists
          li
            a(href='{{pathFor route="playlistsPage"}}')
              | Channel Playlists

        ul.header__menu.pull-right
          li.dropdown
            +notificationsWidget
          li.dropdown
            a(data-toggle='dropdown' aria-expanded='false')
              img.img__profile(alt='#{user.name}' src='#{user.picture}')
            ul.dropdown-menu
              li
                a.btn-js-logout(href='#')
                  | Logout
