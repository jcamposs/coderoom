template(name='header')
  header.header
    a.header__logo(href='{{pathFor route="dashboard"}}')
      img(src='/logo-alpha.png')
      span CodeRoom

    .header__content
      +roomControls

      if isMain
        ul.header__menu.header__links.pull-left
          li
            a(href='{{pathFor route="recordings"}}')
              | All recordings

        ul.header__menu.pull-right
          li.dropdown
            +notifications
          li
            a.btn-js-logout
              span.mdi.mdi-logout
