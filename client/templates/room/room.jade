template(name="room")
  .room
    .room__header
      .room__header__logo
        a(href='/')
          img(src='/code-icon.png')
          span CodeRoom

      if isModerator
        .room__header__controls
          +roomControlsBar

    .room__container
      .room__code__area
        +editor(mode='edit')
      .room__chat__area
        +media
        +chat

    .room__footer
      .room__footer__title
        | Participants

      .room__participants

  +newRecordingModal
