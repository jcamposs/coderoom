template(name="room")
  .room
    .room__header
      .room__header__logo

      if isModerator
        .room__header__controls
          +roomControlsBar

    .room__container
      .room__code__area
        +editor(mode='edit')
      .room__chat__area
        .room__chat__container
          .room__chat__bar
            +chatControlsBar

          video#main-video(src="" muted autoplay)
          
          .room__chat__participants

        .room__text-chat__container
          .chat__messages
            .chat__messages__empty

        .chat__input
          .chat__input__text
            textarea(placeholder='Send a message...' onkeypress=onTestChange)

    .room__footer
      .room__footer__title
        | Participants

      .room__participants

  +modal
