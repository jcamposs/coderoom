template(name='home')
  nav.nav
    .nav__content
      .nav__logo
        a(href='/')
          img(src='/logo-alpha.png')
          span CodeRoom
            
  
  header.wrapper__signup
    .wrapper__headline
      h1 The Ultimate Online Coding Interview Tool
      h2 Collaborative Editor - Chat
      .headline__buttons
        a.btn.btn--signup-google.btn-js-signup-google
          span.mdi.mdi-google
          | Sign up with Google

  section.features
    h2 Revolutionizing Coding Interview Preparation
    .section__container
      .section__item
        img.section__item__img(src="/code-optimization-xxl.png")
