  .page-header.dashboard__header
    h2
      strong Recordings

  .row
    .col-lg-12
      .cards__container
        .card.card--blue(data-toggle='modal' data-target='#newRoom')
          a.card__content
            span.card__image
              img(src='http://www.janlogan.com/the-news/wp-content/plugins/radykal-fancy-gallery/images/fancygallery/hover%20icons/circle-plus.png')
            span.card__text
              | Create a new recording

        each val in recordings
          .card
            a.card__content(href="{{pathFor route='recordingPage' _id=val._id}}")
              span.card__image
                img(src='https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcQepJ9jkg88W2MhJSkLlkzqmSoXp2l1qGnc4pzvL5GdpNit-crz')
              span.card__text
                | #{val.title}
            .card__footer
              each p in val.participants
                .card__colaborator
                  img(src=getColaboratorAvatar(p.id))
