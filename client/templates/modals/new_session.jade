template(name='newSession')
  #newSession.modal.modal--flat(tabindex='-1' role='dialog')
    button.btn.modal-close(type='button' data-dismiss='modal' aria-label='Close')
      span(aria-hidden='true') Ã—
    .modal-dialog(role='document')
      .modal-content
        form(role='form')
          .modal-header
            h3.modal-title New Session
          .modal-body
            .form-group
              label.control-label(for='room-name') Room Name:
              input#room-name.form-control.form-control--large(type='text' name='text' placeholder='Choose the name of your room')
            .form-group.form-group--md.pull-left
              label.control-label(for='room-start-date') Start Date:
              .input-group.datetimepicker
                span.input-group-addon
                  span.mdi.mdi-calendar.mdi-18px
                input#room-start-date.set-due-date.form-control.form-control--large(type='text')

            .form-group.form-group--md.pull-right
              label.control-label(for='room-end-date') End Date:
              .input-group.datetimepicker
                span.input-group-addon
                  span.mdi.mdi-calendar.mdi-18px
                input#room-end-date.set-due-date.form-control.form-control--large(type='text')

          .modal-footer
            button.btn.btn-primary.btn--lg(type='submit')
              | Create
